<h1>Sign Up</h1>
<% flash.each do |type, msgs| %>
  <div class="alert alert-danger">
    <h5>Oops! There are something wrong happen:</h5>
    <ul>
      <% msgs.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f|%>
  <div class="col-md-6 col-md-offset-3">
    <%= f.label :username%><br>
    <%= f.text_field :username%><br>
    <label class="hint">Username should be characters length between 3 and 20</label><br>
    <%= f.label :password%><br>
    <%= f.password_field :password%><br>
    <label class="hint">Password should longer than 5 characters</label><br>
    <%= f.label :password_confirmation, "Password Confirmation" %><br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Create User", class: "btn btn-primary" %>
  </div>
<%end%>
