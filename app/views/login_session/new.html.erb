<% flash.each do |type, msgs| %>
  <div class="alert alert-danger">
    <h5>Oops! There are something wrong happen:</h5>
    <ul>
      <% msgs.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="userContainer">
<h1>User Login</h1>
  <hr>
  <%= form_tag '/login' do %>
    <%= label_tag :username, nil, class: "userLabel"%><br>
    <%= text_field_tag :username, nil,  class: "userTextbox"%><br>
    <%= label_tag :password, nil,  class: "userLabel"%><br>
    <%= password_field_tag :password, nil,  class: "userTextbox"%><br>
    <%= submit_tag "Login", class: "btn-success submit"%>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  <%end%>
</div>