<h2>Details about <em><%= @recipe.name %></em></h2>
<img src="<%= @recipe.image_url %>" class="img-fluid" alt="Responsive image">
<ul id="details">
  <li>
    Released on:
    <%= @recipe.created_at.strftime("%B %d, %Y") %>
  </li>
</ul>
<h3>Ingredients:</h3>
<div class="list-group">
  <% @recipe.ingredients.each do |ingredient| %>
    <a class="list-group-item list-group-item-action"><%= ingredient.name %></a>
  <% end %>
</div>
<h3>Steps:</h3>
<p id="description">
  <%= raw(@recipe.steps) %>
</p>
