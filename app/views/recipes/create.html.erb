<div class="section">
  <h2>Have Ideas? Create Your Own Recipe Here!</h2>
</div>


  <%= puts flash.inspect %>
  <% flash.each do |type, msgs| %>
    <div class="alert alert-danger">
      <h5>Oops! There are something wrong happen:</h5>
      <ul>
        <% msgs.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="newRecipeContainer">
  <%= form_for @recipe do |f| %>
    <p>
      <%= f.label :name, class: "recipeCreateFont" %><br />
      <%= f.text_field :name, placeholder: '(Required)', class: "recipeTextbox" %>
    </p>
    <div class="recipeCreateFont">Ingredients</div>
    <div id="recipeSet">
      <%= render partial: "ingredient_form" %>
    </div>
    <a href="javascript:;" id="addNewIng" class="addNewFormation">Add Ingredient</a>
    <p>
      <%= f.label :steps, class: "recipeCreateFont" %>
      <label class="hint">chars left: <span id="counter" data-maximum-length="<%= @maximum_length %>"><%= @maximum_length %></span></label><br />
      <%= f.text_area :steps, class: "recipeTextbox", :rows => 6, :cols => 50, placeholder: 'Write the instruction here...(Required)', maxlength: @maximum_length, id: 'steps'%>
      
    </p>
    <p>
      <%= f.submit "Submit", class: "btn-success submit" %>
    </p>
  <% end %>
</div>



<div class="hide" id="new_ingredient_form">
  <%= render partial: "ingredient_form", locals: {ingredient: false} %>
</div>